<div class="login-page" class="container">
  <div class="registration-form" class="form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group" class="field">
      <p><%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" ,  class: "input-sign", placeholder: t(:nickname), class:"input" %>
    </div>

    <div class="form-group" class="field">
      <p><%= f.email_field :email, autofocus: true, autocomplete: "email" ,  class: "input-sign", placeholder: t(:email), class:"input" %>
    </div>

    <div class="form-group" class="field">

      <p><%= f.password_field :password, autocomplete: "new-password" ,  class: "input-sign", placeholder: t(:password), class:"input" %>
      <% if @minimum_password_length %>
        <% end %><br />
    </div>

    <div class="form-group" class="field">
      <p><%= f.password_field :password_confirmation, autocomplete: "new-password" ,  class: "input-sign", placeholder: t(:confirm), class:"input" %>
    </div>

    <div class="form-group" class="actions">
      <p><%= f.submit t(:signup), class:"btn btn-primary" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
  </center>
  </div>
</div>
