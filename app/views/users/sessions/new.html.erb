<div class="login-page" class="container" style="background-image: url(/assets/ales-krivec-201390-unsplash.jpg); background-size:cover">
  <div class="login-form" class="form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group" class="field">
        <p><%= f.text_field :login, autofocus: true, autocomplete: "login",class: "input-sign", class:"input", placeholder: t(:login) %>
      </div>

      <div class="form-group" class="field">
        <p><%= f.password_field :password, autocomplete: "current-password", class: "input-sign", class:"input", placeholder: t(:password) %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div div class="form-group" class="field">
          <%= f.check_box :remember_me %>
          <%= f.label t(:remember_me) %>
        </div>
      <% end -%>

      <div class="actions">
        <p><%= f.submit t(:log_in), class:"btn btn-primary"%>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </center>
  </div>
</div>
