<br><br>
<%= t(:nthemes)%><br>
<% @themes.last(5).each do |theme| %>
  <%= t(:title)%>
  <%= theme.name%><br>
  <% theme.photos.each do |x| %>
    <%= image_tag x.url[0] %>
  <% end %>
  <br>
  <%= t(:system)%>
  <br>
  <% theme.systems.each do |system| %>
    <%= link_to system.name, system_path(system.name) %><br>
  <% end %><hr>
<% end %>
<br>
<hr>
<%= t(:ncomments)%>
<% @comments.last(5).each do |comment| %>
  <%= t(:user)%>
  <%= link_to comment.user.userparam.username, userparam_path(comment.user.userparam.id)%><br>
  <%= t(:commentto)%>
  <%= link_to comment.theme.name, theme_path(comment.theme.id)%>
  <%= t(:created)%>
  <%= comment.created_at.to_date.strftime("%d %B, %Y ") %>
  <hr>
<%end%>
