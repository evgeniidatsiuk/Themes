<br>
<%if user_signed_in? && current_user.id == @theme.user_id%>
  <%=link_to "Редагувати", edit_theme_path(@theme.id)%><br>
<%end%>

Title:<%= @theme.name%><br>

Author:
<%= link_to @theme.user.userparam.username, userparam_path(@theme.user.userparam)%><br>

<% @theme.photos.each do |x| %>
  <%= image_tag x.url[0] %>
<% end %>

System:
<%@theme.systems.each do |system|%>
  <%= system.name %><br>
<%end%>

Views :
<%= @theme.views %><br>

Description:<%= @theme.description%>
<br>
Tags:<br>
<%= raw @theme.tags.map{ |tag| link_to tag.category.name, category_path(tag.category.name), class: 'font-weight-bold badge badge-secondary' }.join(' ') %>
<br>
Download:<br>
<%= link_to "Download theme", "http://#{@theme.download}"%>
<hr>
<br><br>

<% if user_signed_in? %>

  Input something :)
  <br>
  <%= form_for :comment, url:comments_path do |f| %>
  <%= render 'comments/comment', f:f%>
  <%= f.hidden_field :object_type, value: @theme.class.name%>
  <%= f.hidden_field :object_id, value: @theme.id%>
  <%= f.submit "Create" %>
<% end %>
<% else %>
<br>
Want to create a new comment?<br>
<%= link_to "Login", new_user_session_path %>
or
<%= link_to "Registration", new_user_registration_path %>

<% end%>

<% Comment.where(object: @theme).each do |comment| %>
<br>User:
<%= comment.user.userparam.username %>
<br>
<%= comment.text%>
<hr>
<%end%>
