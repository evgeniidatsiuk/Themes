<br>
<%if user_signed_in? && current_user.id == @theme.user_id%>
  <%=link_to t(:edit), edit_theme_path(@theme.id)%><br>
<%end%>

<%= t(:title)%>
<%= @theme.name%><br>

<%= t(:author)%>
<%= link_to @theme.user.userparam.username, userparam_path(@theme.user.userparam.id)%><br>

<% @theme.photos.each do |x| %>
  <%= image_tag x.url,  style:" width:500px;" %>
<% end %>

<%= t(:system)%>
<%@theme.systems.each do |system|%>
  <%= system.name %><br>
<%end%>

<%= t(:views)%>
<%= @theme.views %><br>
<%= t(:description)%><%= @theme.description%>
<br>
<%= t(:tags)%><br>
<%= raw @theme.tags.map{ |tag| link_to tag.category.name, category_path(tag.category.name), class: 'font-weight-bold badge badge-secondary' }.join(' ') %>
<br>
<%= t(:download)%><br>
<%= link_to t(:downloadt), "http://#{@theme.download}"%>
<hr>
<br><br>
<%= link_to t(:like), theme_like_path(@theme.id)%>
<%= @theme.likes.length %>|<br>
<%= link_to t(:dislike), theme_dislike_path(@theme.id) %>
<%= @theme.dislikes.length %>
<br>
<%= link_to t(:tochosen), chosen_path(@theme.id) %>

<% if user_signed_in? %>
  <%= render 'comments/form'%>
<% else %>
  <br>
  <%= t(:tocomment)%><br>
  <%= link_to t(:login), new_user_session_path %>

<% end%>

<br>
<ul class="content-list content-list_comments">
  <% @comments.each do |comment| %>
    <%=render 'comments/comment', comment:comment %>
  <%end%>
</ul>
<%= t(:sthemes)%>
<%= render @theme_recommendation%>
